<div class="container mt-5">
    <h1>Phone Book</h1>
    <div class="input-group mb-3">
        <input type="text" class="form-control" id="searchInput" placeholder="Search in phone book">
    </div>
    <button id="addNewContactBtn" class="btn btn-primary mb-3">Add New Contact</button>
    <table id="contactTable" class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone Numbers</th>
                <th>Emails</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<!-- Add Contact Modal -->
<div id="addContactModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Contact</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addContactForm">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name"  placeholder="At least 5 characters" minlength="5" required>
                    </div>
                    <div id="phoneNumbersContainer" class="form-group">
                        <label for="phone">Phone Numbers</label>
                        <div class="input-group mb-2">
                            <input type="text" class="form-control"  name="phoneNumbers[]" maxlength="10" pattern="^[1-9]\d{9}$" placeholder="Without 0 in start" required>
                            <div class="input-group-append">
                                <button type="button" style="margin:0" class="btn btn-success add-phone-btn">+</button>
                            </div>
                        </div>
                    </div>
                    <div id="emailsContainer" class="form-group">
                        <label for="email">Emails</label>
                        <div class="input-group mb-2">
                            <input type="email" class="form-control" name="emails[]" required>
                            <div class="input-group-append">
                                <button type="button" style="margin:0" class="btn btn-success add-email-btn">+</button>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Contact</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Update Contact Modal -->
<div id="updateContactModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Contact</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="updateContactForm">
                    <input type="hidden" id="updateId">
                    <div class="form-group">
                        <label for="updateName">Name</label>
                        <input type="text" class="form-control"  id="updateName" placeholder="At least 5 characters" minlength="5" required>
                    </div>
                    <div id="updatePhoneNumbersContainer" class="form-group">
                        <label for="updatePhone">Phone Numbers</label>
                    </div>
                    <div id="updateEmailsContainer" class="form-group">
                        <label for="updateEmail">Emails</label>
                    </div>
                    <button type="submit" style="margin:0" class="btn btn-primary">Update Contact</button>
                </form>
            </div>
        </div>
    </div>
</div>
